<main class="contenedor">
    <form action="/pedidos/nueva" method="POST" class="default-form">
        <h3>Información General del Pedido</h3>
        <div class="campo">
            <label>Nombre:</label>
            <input type="text" name="nombre" placeholder="Ingrese el nombre de la persona que realiza el pedido" required>
        </div>
        <div class="campo">
            <label>Telefono:</label>
            <input type="text" name="telefono" placeholder="Ingrese su numero telefonico" required>
        </div>
        <div class="campo">
            <label>Dirección:</label>
            <input type="text" name="direccion" placeholder="Ingrese la direccion" required>
        </div>
        <div class="campo">
            <label>Barrio:</label>
            <input type="text" name="barrio" placeholder="Ingrese el barrio" required>
        </div>
        <div class="campo">
            <label>Pago:</label>
            <select name="pago">
                <option disabled selected>Selecciona</option>
                <option value="Efectivo">Efectivo</option>
                <option value="Tarjeta">Tarjeta</option>
            </select>
        </div>
        <h3>Descripción del Pedido</h3>
        <input type="hidden" name="descripcion" id="x">
        <trix-editor input="x"></trix-editor>
        <h3>Lista de Productos a consumir</h3>
        <ul class="lista-conocimientos">
            {{#seleccionSkills a}}
            {{/seleccionSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skilll" id="skilll">
            <input type="submit" value="Realizar Pedido" class="btn btn-azul">
        </div>
    </form>
</main>